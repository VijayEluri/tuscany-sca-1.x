<project>
    <parent>
        <groupId>org.apache.tuscany.sca.extensions.spring.samples</groupId>
        <artifactId>parent</artifactId>
        <version>1.0-incubator-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>spring-client</artifactId>
    <packaging>war</packaging>
    <name>Tuscany Spring Sample Client Web Application</name>
    <description>Demonstrates using Spring with Tuscany as a client.</description>

    <dependencies>
        <dependency>
            <!-- Spring-SCA container extension -->
            <groupId>org.apache.tuscany.sca.extensions.spring</groupId>
            <artifactId>tuscany-spring</artifactId>
            <version>${extensionVersion}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <!-- Test binding extension -->
            <groupId>org.apache.tuscany.sca</groupId>
            <artifactId>test</artifactId>
            <version>0.1-pre-spec-SNAPSHOT</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring</artifactId>
            <version>2.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>client</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.tuscany.sca.runtime.webapp</groupId>
                <artifactId>tuscany-war-plugin</artifactId>
                <version>${scaKernelVersion}</version>
                <executions>
                    <execution>
                        <id>tuscany-war</id>
                        <goals>
                            <goal>tuscany-war</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <loadExtensionDependencies>true</loadExtensionDependencies>
                    <extensions>
                        <dependency>
                            <groupId>org.apache.tuscany.sca.extensions.spring</groupId>
                            <artifactId>tuscany-spring</artifactId>
                            <version>${extensionVersion}</version>
                        </dependency>
                    </extensions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
