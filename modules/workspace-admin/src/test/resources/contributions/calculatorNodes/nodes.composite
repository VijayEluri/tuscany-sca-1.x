<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           targetNamespace="http://CalculatorNodes"
           xmlns:t="http://tuscany.apache.org/xmlns/sca/1.0"
           xmlns:xsd="http://www.w3.org/2001/XMLSchema"
           xmlns:sample="http://sample"
           name="CalculatorNodes">      

    <component name="NodeA">
        <t:implementation.node composite="sample:CalculatorA"/>
        <service name="Default">
            <binding.sca uri="http://myhost1:8080"/>
            <binding.ws uri="http://myhost1:8080"/>
            <t:binding.http uri="https://myhost1:8080"/>
            <t:binding.jsonrpc uri="https://myhost1:8080"/>
            <t:binding.atom uri="https://myhost1:8080"/>
        </service>
    </component>
    
    <component name="NodeB">
        <t:implementation.node composite="sample:CalculatorB"/>
       	<service name="Default">
            <binding.sca uri="http://myhost2:8081"/>
            <binding.ws uri="http://myhost2:8081"/>
            <t:binding.http uri="https://myhost1:8081"/>
            <t:binding.jsonrpc uri="https://myhost1:8081"/>
            <t:binding.atom uri="https://myhost1:8081"/>            
        </service>
    </component> 

    <component name="NodeC">
        <t:implementation.node composite="sample:CalculatorC"/>
       	<service name="Default">
            <binding.sca uri="http://myhost2:8082"/>
            <binding.ws uri="http://myhost2:8082"/>
            <t:binding.http uri="https://myhost1:8082"/>
            <t:binding.jsonrpc uri="https://myhost1:8082"/>
            <t:binding.atom uri="https://myhost1:8082"/>            
        </service>
    </component> 
    
</composite>