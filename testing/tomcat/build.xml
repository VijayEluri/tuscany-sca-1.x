        <property name="tuscany.maven.repos.dir" value='${user.home}\.m2\repository' />
        <condition property="isWindows">
            <os family="windows"/>
        </condition>
        <condition property="isUnix">
            <os family="unix"/>
        </condition>
        <condition property="isMac">
            <os family="mac"/>
